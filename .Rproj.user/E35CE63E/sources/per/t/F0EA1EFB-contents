labeller.function <- function(x) { # labels in output tables (no underscores)
  dplyr::recode(x,
                "age_at_date_of_research" = "Age",
                "iq" = "IQ",
                "bmi_at_date_of_research" = "BMI",
                "bmisds_at_date_of_research" = "BMI-SDS",
